<header>
    <nav>
        {{#if logged_in}}
        <a class="btn" href="/profile">profile</a> |
        <button class="btn" type="submit " id="logoutBtn">logout</button>
        <a href="/publish" class="btn" id="createBtn"> Publish a New Post</a>
        {{else}}
        <a class="btn" href="/login" id="logInBtn">login</a>
        {{/if}}
    </nav>

</header>

<h1>Latest Blogs:</h1>
{{#if blogs}}

{{#each blogs as |blog|}}
<section class="blogSpace">
    <div class="homeBlogContainer">
        <div class="homeBlogDiv">
            <div class="homeBlogHeader">
                <h2 class="homeBlogTitle">
                    <a class="homeBlogTitle" href="/blog/{{blog.id}}">{{blog.title}}</a>
                </h2>
                <p>Written by {{blog.user.name}} on {{format_date blog.date_created}}</p>
            </div>

        </div>
        <div class="homeBlogDescDiv">
            <p class="blogPreview">
                {{ blog.body}}
            </p>
        </div>
    </div>
</section>
{{/each}}


{{else}}
<h2> No Blogs Yet!</h2>
<p> Log in to make a post :)</p>
{{/if}}

<script src="./js/logout.js"></script>